<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ListaVijesti_Fragment1" >


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prikaz vijesti"
        android:textColor="@android:color/white"
        android:textStyle="italic|bold"
        android:textSize="17dp"
        android:background="@android:color/darker_gray"
        android:textAlignment="center"/>

   <ListView
       android:id="@+id/lvVijesti"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:layout_below="@id/txt1"
       android:layout_above="@id/btnDodaj"

       ></ListView>

    <Button
        android:id="@+id/btnDodaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj vijest"
        android:layout_alignParentBottom="true"/>





</RelativeLayout>