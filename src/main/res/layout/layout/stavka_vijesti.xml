<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_hearing_black_24dp"/>

    <TextView
        android:id="@+id/txtNaslov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img1"
        android:text="Naslov vijesti"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img1"
        android:layout_marginLeft="10dp"
        android:text="Neki tekst"
        android:maxLines="2"
        android:layout_below="@id/txtNaslov"

        />



</RelativeLayout>